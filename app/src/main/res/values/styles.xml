<resources>

    <!-- Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    -->

    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar" />

    <!-- 启动页透明无title主题 -->
    <style name="White" parent="android:Theme.Light.NoTitleBar">
        　　
        <item name="android:windowBackground">@color/white</item>
        　　
        <item name="android:windowIsTranslucent">true</item>
        　　
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        　　
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="permission_PermissionActivity" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Dialog样式 -->
    <style name="DialogProgress">
        <item name="android:layout_width">23dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/dialog_progressbar</item>
    </style>

    <!-- START**键盘**START -->
    <style name="SercurityDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/SercurityAnimation</item>
    </style>

    <style name="SercurityAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/input_method_enter</item>
        <item name="android:windowExitAnimation">@anim/input_method_exit</item>
    </style>

    <!-- 提示的小圆点 -->
    <style name="point">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:src">@drawable/shape_orange_circle</item>
    </style>

    <style name="edit_phone" parent="edit_common">
        <item name="android:maxLength">11</item>
        <item name="android:hint">@string/hint_login_phone_num</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="edit_password" parent="edit_common">
        <item name="android:hint">@string/hint_login_password</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">18</item>
    </style>

    <style name="edit_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_white_rect</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:textSize">@dimen/textSize_34px</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/gray_DBDBDB</item>
    </style>

    <!-- TitleBar 返回键专用 -->
    <style name="img_titlebar_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:src">@drawable/btn_back</item>
    </style>

    <!-- TitleBar 标题专用 -->
    <style name="tv_titlebar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textSize_34px</item>
        <item name="android:textColor">@color/black_262626</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_register" parent="edit_common">
        <item name="android:background">@drawable/bg_white_oval</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft_register</item>
        <item name="android:layout_marginRight">@dimen/marginLeft_register</item>
        <item name="android:layout_marginTop">@dimen/marginTop_register</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <!-- 基本按钮样式 -->
    <style name="bt_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:textSize">@dimen/textSize_40px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_enable_btn</item>
    </style>

    <style name="tv_my">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_262626</item>
        <item name="android:textSize">@dimen/textSize_28px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/selector_press_gray</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:drawableRight">@drawable/next_arrow_tip</item>
    </style>

    <!-- 高度为1px的横线 -->
    <style name="view_1px_line_horizontal" parent="view_1dp_line_horizontal">
        <item name="android:layout_height">1px</item>
    </style>

    <!-- 高度为1dp的横线 -->
    <style name="view_1dp_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_E5E5E5</item>
    </style>

    <!-- 我的,更多页,安全中心-->
    <style name="rl_my">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@drawable/selector_press_gray</item>
    </style>

    <style name="tv_security">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_262626</item>
        <item name="android:textSize">@dimen/textSize_32px</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="tv_security_right" parent="tv_security">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- 通用ScrollView样式 -->
    <style name="scrollView_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- START**解绑界面身份证拍照**START -->
    <style name="ll_take_photo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="iv_take_photo">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
    </style>

    <style name="tv_take_photo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginTop">@dimen/marginTop_invest_income_text</item>
        <item name="android:textColor">@color/gray_A3A3A3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- END**解绑界面身份证拍照**END -->

    <!-- 高为45dp，宽2dp的竖线 -->
    <style name="view_45dp_line_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/gray_DEDEDE</item>
    </style>

    <style name="edit_realname" parent="edit_common">
        <item name="android:hint">@string/input_real_name</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="edit_idcard" parent="edit_common">
        <item name="android:hint">@string/input_id_card</item>
        <item name="android:maxLength">18</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- 高度为1px的横线 gray_DBDBDB -->
    <style name="view_1px_line_horizontal_dbdbdb" parent="view_1px_line_horizontal">
        <item name="android:background">@color/gray_DBDBDB</item>
    </style>

    <!-- 黑色提示字体样式 -->
    <style name="tv_black_262626">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_262626</item>
    </style>

    <!-- 费率信息 -->
    <style name="fee_info">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="fee_info2">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/gray_A3A3A3</item>
    </style>
</resources>
