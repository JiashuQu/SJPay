<resources>

    <!-- Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    -->

    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar" />

    <!-- 启动页透明无title主题 -->
    <style name="White" parent="android:Theme.Light.NoTitleBar">
        　　
        <item name="android:windowBackground">@color/white</item>
        　　
        <item name="android:windowIsTranslucent">true</item>
        　　
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        　　
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="permission_PermissionActivity" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Dialog样式 -->
    <style name="DialogProgress">
        <item name="android:layout_width">23dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/dialog_progressbar</item>
    </style>

    <!-- START**键盘**START -->
    <style name="SercurityDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/SercurityAnimation</item>
    </style>

    <style name="SercurityAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/input_method_enter</item>
        <item name="android:windowExitAnimation">@anim/input_method_exit</item>
    </style>

    <!-- 提示的小圆点 -->
    <style name="point">
