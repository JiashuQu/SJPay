<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.GetVipActivity"
    android:background="@color/white_FFF0FAF8">

    <com.sujin.sjpay.view.TitleBarView
        android:id="@+id/tb_login_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:bar_title="@string/get_vip" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_vip_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/svip_forever"
                android:layout_marginTop="@dimen/_10dp"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/_15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10dp">

                <TextView
                    style="@style/vip_price_view"
                    android:text="￥"/>

                <TextView
                    android:id="@+id/tv_price_top"
                    style="@style/vip_price_large_view"
                    android:text="99"/>

                <TextView
                    style="@style/vip_price_view"
                    android:text=".0"/>

            </LinearLayout>

            <com.example.library.banner.BannerLayout
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:layout_marginTop="@dimen/_20dp"
                app:autoPlaying="true"
                app:centerScale="1.3"
                app:itemSpace="20"
                app:moveSpeed="1.8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:background="@drawable/bg_coner_10_stroke_full_white"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wx_pay"
                    android:layout_marginTop="@dimen/_15dp"
                    android:textSize="14dp"
                    android:textColor="@color/black_666666"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_15dp">

                    <LinearLayout
                        style="@style/vip_price_list"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="4dp">

                        <ImageView
                            style="@style/vip_type"
                            android:src="@drawable/svip"/>

                        <TextView
                            style="@style/vip_type_info"
                            android:text="@string/svip_forever"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            style="@style/base_linear_wwh"
                            android:layout_marginTop="@dimen/_10dp">

                            <TextView
                                style="@style/vip_price_view"
                                android:text="￥"/>

                            <TextView
                                android:id="@+id/tv_svip_price"
                                style="@style/vip_price_large_view"
                                android:text="99"/>

                            <TextView
                                style="@style/vip_price_view"
                                android:text=".0"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_svip_old_price"
                            style="@style/vip_old_price"
                            android:text="原价￥199"/>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/vip_price_list">

                        <ImageView
                            style="@style/vip_type"
                            android:src="@drawable/vip"/>

                        <TextView
                            style="@style/vip_type_info"
                            android:text="@string/vip_forever"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            style="@style/base_linear_wwh"
                            android:layout_marginTop="@dimen/_10dp">

                            <TextView
                                style="@style/vip_price_view"
                                android:text="￥"/>

                            <TextView
                                android:id="@+id/tv_vip_price"
                                style="@style/vip_price_large_view"
                                android:text="49"/>

                            <TextView
                                style="@style/vip_price_view"
                                android:text=".0"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_vip_old_price"
                            style="@style/vip_old_price"
                            android:text="原价￥99"/>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/vip_price_list"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="6dp">

                        <ImageView
                            style="@style/vip_type"
                            android:src="@drawable/vip_svip"/>

                        <TextView
                            style="@style/vip_type_info"
                            android:text="@string/vip_svip"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            style="@style/base_linear_wwh"
                            android:layout_marginTop="@dimen/_10dp">

                            <TextView
                                style="@style/vip_price_view"
                                android:text="￥"/>

                            <TextView
                                android:id="@+id/tv_vip_svip_price"
                                style="@style/vip_price_large_view"
                                android:text="69"/>

                            <TextView
                                style="@style/vip_price_view"
                                android:text=".0"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_vip_svip_old_price"
                            style="@style/vip_old_price"
                            android:text="原价￥119"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_get_vip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:background="@drawable/btn_get_top_level"/>

            <LinearLayout
                style="@style/base_linear_mwv"
                android:background="@drawable/bg_coner_10_stroke_full_white"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vip_interests"
                    android:layout_marginTop="@dimen/_15dp"
                    android:textSize="18dp"
                    android:textColor="@color/purple_FF560D94"/>
                
                <LinearLayout
                    style="@style/base_linear_mwh"></LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>