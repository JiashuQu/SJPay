<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_corners_10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="25dp">

    <TextView
        android:id="@+id/tv_dialog_tip_2_button_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        android:textColor="@color/black_262626"
        android:textSize="@dimen/textSize_32px"
        tools:text="请输入密码" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_DBDBDB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_tip_2_button_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/textSize_34px"
            android:textColor="@color/gray_999999"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_DBDBDB"/>

        <TextView
            android:id="@+id/tv_dialog_tip_2_button_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="取消"
            android:textSize="@dimen/textSize_34px"
            android:textColor="@color/red_D72F2F"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>
    </LinearLayout>
</LinearLayout>