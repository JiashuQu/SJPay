<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.sujin.sjpay.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:bar_title="@string/select_pay_card" />

    <TextView
        android:id="@+id/tv_bankcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:padding="@dimen/_10dp"
        android:text="   绑定新的信用卡"
        android:drawableLeft="@drawable/icon_add"
        android:textColor="@color/gray_A3A3A3"
        android:textSize="15sp"
        android:background="@drawable/bg_trans_rect"/>

    <ListView
        android:id="@+id/list_select_bank_belong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@drawable/selector_press_gray"
        android:dividerHeight="@dimen/_0dp"
        android:divider="@color/transparent"
        android:scrollbars="none"
        android:overScrollMode="never"
        />

</LinearLayout>
