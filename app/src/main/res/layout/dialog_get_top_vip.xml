<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_coner_10_stroke_full_white"
    android:gravity="center"
    android:padding="@dimen/_15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15dp"
        android:text="@string/contact"
        android:textColor="@color/black_333333"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户经理：186 1012 2058"
        android:textColor="@color/black_333333"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户经理：185 0612 0807"
        android:layout_marginTop="@dimen/_10dp"
        android:textColor="@color/black_333333"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wx_service"
        android:layout_marginTop="@dimen/_10dp"
        android:textColor="@color/black_333333"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/confirm"
        android:textSize="@dimen/textSize_40px"
        android:background="@drawable/bg_orange_rect"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"/>

</LinearLayout>