<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InviteActivity">

    <com.sujin.sjpay.view.TitleBarView
        android:id="@+id/tb_login_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:bar_title="@string/invite_short" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:background="@drawable/bg_invite_top"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="104dp"
            android:layout_height="18dp"
            android:layout_marginTop="@dimen/_20dp"
            android:src="@drawable/invite_rule" />

        <LinearLayout
            android:layout_width="352dp"
            android:layout_height="291dp"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/bg_invite_get_money"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_invite_rule_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. SVIP每推荐一名用户开通SVIP可获得50元现金奖励"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:layout_marginTop="55dp"
                />

            <View
                style="@style/view_1px_line_horizontal"
                android:layout_width="match_parent"
                android:background="@color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>