<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InviteActivity">

    <com.sujin.sjpay.view.TitleBarView
        android:id="@+id/tb_login_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:bar_title="@string/invite_short" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_my_invite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sujin.sjpay.view.ScrollzfView
            android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        
        <LinearLayout
            style="@style/base_linear_mmv">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_invite_top"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="104dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="208dp"
                    android:src="@drawable/invite_rule" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="291dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/bg_invite_get_money"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_invite_rule_one"
                        style="@style/invite_rule"
                        android:layout_marginTop="60dp"
                        android:text="1. "/>

                    <View
                        style="@style/invite_rule_line"/>

                    <TextView
                        android:id="@+id/tv_invite_rule_two"
                        style="@style/invite_rule"
                        android:layout_marginTop="15dp"
                        android:text="2. "/>

                    <View
                        style="@style/invite_rule_line"/>

                    <TextView
                        android:id="@+id/tv_invite_rule_three"
                        style="@style/invite_rule"
                        android:layout_marginTop="15dp"
                        android:text="3."/>

                    <View
                        style="@style/invite_rule_line"/>

                    <TextView
                        android:id="@+id/tv_invite_rule_four"
                        style="@style/invite_rule"
                        android:layout_marginTop="15dp"
                        android:text="4. "/>

                    <View
                        style="@style/invite_rule_line"/>

                    <TextView
                        android:id="@+id/tv_invite_detail_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_coner_20_stroke_white"
                        android:text="@string/rule_detail"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:drawableRight="@drawable/invite_right"
                        android:layout_marginTop="@dimen/_10dp"
                        android:paddingLeft="@dimen/_20dp"
                        android:paddingRight="@dimen/_20dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:paddingTop="@dimen/_10dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_invite_share"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginRight="@dimen/_20dp"
                    android:layout_height="70dp"
                    android:background="@drawable/btn_invite"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/invite_list"
                    android:textColor="@color/white"
                    android:drawableRight="@drawable/invite_down"
                    android:drawablePadding="@dimen/_5dp" />

            </LinearLayout>

            <com.sujin.sjpay.view.MyListView
                android:id="@+id/lv_invite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@drawable/selector_press_gray"
                android:dividerHeight="@dimen/_0dp"
                android:divider="@color/transparent"
                android:scrollbars="none"
                android:overScrollMode="never"/>

        </LinearLayout>

    </com.sujin.sjpay.view.ScrollzfView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>