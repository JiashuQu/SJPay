<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sujin.sjpay.view.TitleBarView
        android:id="@+id/tb_login_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:bar_title="@string/login" />


    <EditText
        android:id="@+id/edit_login_phone_num"
        style="@style/edit_phone"
        android:layout_marginLeft="@dimen/marginHorizontal_login"
        android:layout_marginRight="@dimen/marginHorizontal_login"
        android:layout_marginTop="20dp" />

    <com.sujin.sjpay.view.PasswordEditText
        android:id="@+id/edit_login_password"
        style="@style/edit_password"
        android:maxLength="18"
        android:layout_marginLeft="@dimen/marginHorizontal_login"
        android:layout_marginRight="@dimen/marginHorizontal_login"
        android:layout_marginTop="@dimen/marginTop_login"/>


    <TextView
        android:id="@+id/tv_login_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/marginHorizontal_login"
        android:layout_marginTop="10dp"
        android:text="@string/forget_password"
        android:textColor="@color/blue_3897F0"
        android:textSize="@dimen/textSize_28px"/>

    <TextView
        android:id="@+id/tv_login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/login"
        android:textSize="@dimen/textSize_40px"
        android:background="@drawable/bg_orange_rect"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/_40dp"
        android:layout_marginRight="@dimen/_40dp"/>

    <TextView
        android:id="@+id/tv_login_quick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/quick_register"
        android:textSize="@dimen/textSize_28px" />

</LinearLayout>
